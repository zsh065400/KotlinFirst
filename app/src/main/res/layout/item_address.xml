<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/id_address_iv_right"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_right_black_24dp"/>

    <LinearLayout
        android:id="@+id/id_address_top_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@id/id_address_iv_right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_address_tv_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="收货人：赵树豪"
            android:textColor="@android:color/black"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/id_address_tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="15133625934"
            android:textColor="@android:color/black"
            android:textSize="18dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/id_address_tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_address_top_right"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@id/id_address_iv_right"
        android:layout_weight="1"
        android:gravity="left"
        android:text="收货地址：河北省廊坊市香河县新华大街青年社区7号楼"
        android:textColor="@android:color/black"
        android:textSize="16dp"/>

</RelativeLayout>
