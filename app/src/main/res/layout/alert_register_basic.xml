<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_marginTop="15dp"
        android:id="@+id/id_register_et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="22dp"
        app:met_autoValidate="true"
        app:met_baseColor="@color/colorPrimary"
        app:met_bottomTextSize="16dp"
        app:met_errorColor="#ff0000"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelTextColor="@android:color/black"
        app:met_floatingLabelTextSize="20dp"
        app:met_primaryColor="@color/colorPrimary"
        app:met_underlineColor="@color/colorPrimary"/>

</LinearLayout>
