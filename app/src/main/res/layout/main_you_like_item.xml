<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="95dp"
              android:foreground="?android:attr/selectableItemBackground"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/id_ylike_image"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/id_ylike_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:lines="1"
            android:text="威威海鲜"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/id_ylike_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_ylike_product"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="现金抵用一次"
            android:textColor="@android:color/darker_gray"
            android:textSize="13dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_ylike_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="8.5"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/id_ylike_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:text="10"
                android:textColor="@android:color/darker_gray"
                android:textSize="13dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/id_ylike_bought"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:ellipsize="end"
            android:text="已售3882份"
            android:textColor="@android:color/darker_gray"
            android:textSize="13dp"/>

    </RelativeLayout>

</LinearLayout>
